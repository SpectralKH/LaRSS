    .container-sample
        button.save-button SAVE
        img.logo(src="logo.png")
        .general-info.collapsed
            .header
                .collapse-icon(title="Show/hide item")
                h3.item-title General Info
                svg.add-icon(xmlns='http://www.w3.org/2000/svg', fill='#FFFFFF', height='24', viewbox='0 0 24 24', width='24')
                    path(d='M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z')
                    path(d='M0 0h24v24H0z', fill='none')
            .item-container
                .row
                    input(type="text" placeholder="Title").title
                    input(type="text" placeholder="Author").author
                .row
                    input(type="text" placeholder="Subtitle").subtitle
                .row
                    textarea(placeholder="Description" rows="1").description
                .row
                    input(type="text" placeholder="URL").url
                    input(type="text" placeholder="Image URL").imageURL
                .row
                    select.language
                        option(value="en-us") en-us
                    select.category
                        option(value="Music") Music
                    select.explicit
                        option(value="yes") Explicit
                        option(value="no") Not explicit
                    input(type="text" placeholder="Copyright").copyright
                .row
                    input(type="text" placeholder="Owner Name").name
                    input(type="text" placeholder="Owner Email").email
        .item.collapsed
            .header
                .collapse-icon(title="Show/hide item")
                h3.item-title Item 1
                .delete-icon(title="Delete item")
            .item-container
                .row
                    input(type="text" placeholder="GUID").guid
                    input(type="text" placeholder="Title").title
                .row
                    input(type="text" placeholder="Audio URL").audioURL
                    input(type="text" placeholder="Image URL").imageURL
                .row
                    select.explicit
                        option(value="yes") Explicit
                        option(value="no") Not explicit
                    input(type="text" placeholder="Date").date
                    input(type="text" placeholder="Duration").duration
                .row
                    textarea(placeholder="Summary" rows="2").summary
    script(src="index.js")
    
